%section#top-header.row
  %h1.col-md-2
    = link_to "Risk Tracker" 
  -if logged_in?
    %ul.col-md-4.clearfix
      - if current_user.admin?
        %li= link_to "Dashboard", admin_dashboard_path
      - else 
        %li= link_to "Work Items", user_work_items_path(current_user)
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li.dropdown 
              = link_to logout_path, method: :post do 
                %span(class="glyphicon glyphicon-log-out")  Logout
              
