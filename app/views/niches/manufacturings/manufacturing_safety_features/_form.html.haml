%section.form-work-item.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for (@manufacturing_safety_feature), url: path do |f| 
        %header
          %h1 Safety Features
        %fieldset
          = f.text_area :summary, placeholder: 'Summary of safety features'
        %fieldset
          = f.submit "Submit", class: "btn btn-confirm" 
      
