%section.form-work-item.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for (@chemical_equipment), url: path do |f| 
        %header
          %h1 Equipments
        %fieldset
          = f.text_area :summary, placeholder: 'Summary of equipments'
        %fieldset
          = f.submit "Submit", class: "btn btn-confirm" 
      
