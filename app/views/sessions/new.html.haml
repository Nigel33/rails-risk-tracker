%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/login' do |f| 
        %header
          %h1 Sign in
        %fieldset
          = f.email_field :email, label: "Email Address", placeholder: 'john@example.com'
          = f.password_field :password
        %fieldset
          = f.submit "Log In", class: "btn btn-confirm" 



        